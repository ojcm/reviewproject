<% include ../partials/header %>

<div class="ui clearing text container segment">

    <h1 class="ui header">Edit <%=company.name%></h1>
    <form class="ui form" action="/companies/<%=company._id%>?_method=PUT" method="POST">
      <div class="field">
        <label>Name</label>
        <input type="text" name="company[name]" value="<%=company.name%>">
      </div>
      <div class="field">
        <label>Address</label>
        <input type="text" name="company[address]" value="<%=company.address%>">
      </div>
      <div class="field">
        <label>Suburb</label>
        <input type="text" name="company[suburb]" value="<%=company.suburb%>">
      </div>
      <div class="field">
        <label>State</label>
        <input type="text" name="company[state]" value="<%=company.state%>">
      </div>
      <div class="field">
        <label>Postal Code</label>
        <input type="text" name="company[postalcode]" value="<%=company.postalcode%>">
      </div>
      <div class="field">
        <label>Description</label>
        <textarea name="company[description]" ><%=company.description%></textarea>
      </div>
      <div class="field">
        <label>Category</label>
        <input type="text" name="company[category]" value="<%=company.category%>">
      </div>
      <a href="/companies/<%=company._id%>" >
        <button class="ui left floated negative basic button">Cancel</button>
      </a>
      <button class="ui right floated positive button" type="submit">Submit</button>
    </form>
</div>

<% include ../partials/footer %>