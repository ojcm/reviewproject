<% include ../partials/header %>

<div class="ui clearing text container segment">

    <h1 class="ui header"><%= company.name %></h1>
    <p><%= company.address %></p>
    <div class="ui label"><%= company.category %></div>
    <p><%= company.description %></p>
    
    <div>
        <form action="/companies/<%= company._id %>?_method=DELETE" method="POST">
            <button class="ui right floated red basic button">
                Delete
                <i class="right chevron icon"></i>
            </button>
        </form>
        <a class="ui right floated orange basic button" href="/companies/<%= company._id %>/edit">
            Edit
            <i class="right chevron icon"></i>
        </a>
    </div>

</div>

<% include ../partials/footer %>