<% include ../partials/header %>

<div class="ui text container segment">

    <h1 class="ui header">Add New company</h1>
    <form class="ui form" action="/companies" method="POST">
      <div class="field">
        <label>Name</label>
        <input type="text" name="company[name]" placeholder="Company Name">
      </div>
      <div class="field">
        <label>Address</label>
        <input type="text" name="company[address]" placeholder="Company Address">
      </div>
      <div class="field">
        <label>Description</label>
        <textarea name="company[description]" ><%=company.description%></textarea>
      </div>
      <div class="field">
        <label>Category</label>
        <input type="text" name="company[category]" placeholder="Category">
      </div>
      <button class="ui button" type="submit">Submit</button>
    </form>
</div>

<% include ../partials/footer %>