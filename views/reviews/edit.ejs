<% include ../partials/header %>

<div class="ui text container clearing segment">

    <h1 class="ui header">Edit Review</h1>
    <form class="ui form" action="/companies/<%= company_id %>/reviews/<%= review._id %>?_method=PUT" method="POST">
      <div class="field">
        <label>Author</label>
        <input type="text" name="review[author]" value="<%= review.author %>">
      </div>
      <div class="field">
        <label>Review</label>
        <input type="text" name="review[body]" value="<%= review.body %>">
      </div>
      <div class="field">
        <label>Image URL</label>
        <input type="text" name="review[image]" value="<%= review.image %>">
      </div>
      <div class="field">
        <label>Rating</label>
        <input type="text" name="review[rating]" value="<%= review.rating %>">
      </div>
      <a href="/companies/<%=company_id%>" >
        <button class="ui left floated negative basic button">Cancel</button>
      </a>
      <button class="ui right floated primary button" type="submit">Submit</button>
    </form>
</div>

<% include ../partials/footer %>